function eventbrite_subuser_options() {
  $subusers = array();
  $result = db_query('SELECT * FROM {eventbrite_subuser} ORDER BY email');
  while ($row = db_fetch_object($result)) {
    $subusers[$row->user_key] = $row->email;
  }
  return $subusers;
}

