function eventbrite_subuser_get_enabled() {
  $enabled = array();
  $result = db_query('SELECT user_id, email FROM {eventbrite_subuser} WHERE status = :status', array(':status' => 1));
  while ($row = db_fetch_object($result)) {
    $enabled[$row->user_id] = $row->email;
  }
  return $enabled;
}

